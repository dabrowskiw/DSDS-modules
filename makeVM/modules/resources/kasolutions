server {
        listen 8080;
        server_name kat.com;
        root /var/www/html/KASolutionsApp;
        index index.php;

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php7.3-fpm.sock;
    }
}
